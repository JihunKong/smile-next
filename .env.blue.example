# SMILE Next.js - Blue Environment (Development/Testing)
# Copy this file to .env.blue and fill in your values
# Domain: smile-next-blue.seedsofempowerment.org

# ===========================================
# Application URLs (Blue Environment)
# ===========================================
NEXTAUTH_URL=https://smile-next-blue.seedsofempowerment.org
NEXT_PUBLIC_APP_URL=https://smile-next-blue.seedsofempowerment.org
AUTH_TRUST_HOST=true

# ===========================================
# Authentication
# ===========================================
AUTH_SECRET=your_auth_secret_here

# Google OAuth (same as production)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# Database (shared with production)
# ===========================================
DB_PASSWORD=your_db_password_here
DATABASE_URL=postgresql://smile_user:${DB_PASSWORD}@db:5432/smile_db

# ===========================================
# Redis (shared with production)
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# AI Services
# ===========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ===========================================
# Email (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@seedsofempowerment.org

# ===========================================
# Stripe (for subscriptions)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Internal API Key (for protected endpoints)
# ===========================================
INTERNAL_API_KEY=your_internal_api_key
